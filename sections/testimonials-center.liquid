{%- assign slideWidth = "50%" -%}

<style>
  #Slider-{{ section.id }} {
    display: flex;
    justify-content: center;
    overflow: hidden;
  }

  #Slider-{{ section.id }} .slideshow__slide {
    flex: 0 0 {{ slideWidth }};
    max-width: {{ slideWidth }};
    transition: transform 0.5s ease;
  }

  #Slider-{{ section.id }} .slideshow__slide:focus-within {
    transform: translateX(0%);
  }

  #Slider-{{ section.id }} .slideshow__slide:not(:focus-within) {
    transform: translateX(-{{ slideWidth }});
  }
</style>

<slideshow-component
  id="testimonial-slider"
  class="slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}"
>
  {%- for block in section.blocks -%}
    <div
      class="slideshow__slide grid__item grid--1-col slider__slide"
      id="Slide-{{ section.id }}-{{ forloop.index }}"
      {{ block.shopify_attributes }}
      role="group"
      aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
      aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
      tabindex="-1"
    >
      <!-- Title -->
      <h2 class="testimonial-title">{{ block.settings.heading }}</h2>

      <!-- Description -->
      <div class="testimonial-description">{{ block.settings.testimonial }}</div>

      <!-- Person -->
      <p class="testimonial-person">{{ block.settings.person }}</p>

      <!-- Date -->
      <p class="testimonial-date">{{ block.settings.date }}</p>
    </div>
  {%- endfor -%}
</slideshow-component>


{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

