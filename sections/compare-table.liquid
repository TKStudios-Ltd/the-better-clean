{% style %}
  .pricing_table_main {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .pricing_table_main {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .pricing_table_main h3.alt-heading {
    max-width: 345px;
    margin: 0 0 3rem;
    line-height: 1.15;
  }
  .pricing_table_main h3.alt-heading strong {
    color: #2D2D2D;
  }
  .pricing_table_main .grid {
    column-gap: 0;
  }
  .pricing_table_sub {
    margin-bottom : 35px;
  }
    @media only screen and (min-width: 750px) {
      .medium-up--hide {
      display: none !important;
    }
    }
  @media only screen and (max-width: 749px) {
    .pricing-table-mob {
      padding-top : 40px;
      padding-left : 0px !important;
    }
    .small--hide {
      display: none !important;
    }
    .grid_item_width {
      one-whole;
    } 
    .pricing_table_main .grid {
      display:block !important;
    }
    .pricing-table-container .grid__item {
      width:100% !important;
      max-width:100% !important;
    }
  }
  .block-price {
    list-style-type:none;
    margin:15px 0;
    padding:0;
    -webkit-transition:.3s;
    transition:.3s;
    display:block;
  }
  .popular{
    transform:scale(1.1);
  }
  .block-price li {
    border-bottom: var(--media-border-width) solid #7F9686;
    padding: 16px 0;
    text-align: center;
  }
  .grid__item .block-price li:first-child {
    padding: 24px 0;
  }
  .grid__item:nth-child(2) .block-price li {
    border-bottom: var(--media-border-width) solid #EDDFD2;
  }
  .grid__item:nth-child(2) .block-price li:first-child {
    border-radius: 20px 20px 0 0;
  }
  .grid__item:nth-child(2) .block-price li:last-child {
    border-bottom: var(--media-border-width) solid #7F9686;
  }
  .most-popular {
    font-size:16px;
  }
{% endstyle %}
<div class="page-width pricing_table_main {{section.settings.pricing-visibility}}">
  {%- liquid 
   case section.blocks.size
    when 1
    assign grid_item_width = ''
    when 2
    assign grid_item_width = 'medium-up--one-half'
    when 3
    assign grid_item_width = 'medium-up--one-third'
    when 4
    assign grid_item_width = 'medium-up--one-quarter'
    endcase 
  -%}  
   {% if section.settings.price-title != blank %}
     <h3 class="h2 alt-heading">{{ section.settings.price-title }}</h3>
   {% endif %}
   <ul class="page-width grid pricing-table-container">
      {% for block in section.blocks %}
      <li class="grid__item pricing-table-mob {{grid_item_width}}">
         <ul class="block-price {% if block.settings.column-mostpopular != blank %} popular {% endif %}">
            {% if block.settings.column-title != blank %}
            <li class="h5 alt-heading" style="background-color:{{block.settings.column-title-color}};color:{{block.settings.column-title-txt-color}};font-size:{{block.settings.column-title-sz}}px;font-weight: bold;">
              {{block.settings.column-title}}
               {% if block.settings.column-mostpopular != blank %}
               <sup class="most-popular"> <i class="fa fa-star " aria-hidden="true"></i> {{block.settings.column-mostpopular}} </sup>
               {% endif %}
            </li>
            {% endif %}
            {% if block.settings.text-1 != blank %}
            <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-1}}</li>
            {% endif %}
            {% if block.settings.text-2 != blank %}
             <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-2}}</li>
            {% endif %}
            {% if block.settings.text-3 != blank %}
             <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-3}}</li>
            {% endif %}
            {% if block.settings.text-4 != blank %}
             <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-4}}</li>
            {% endif %}
            {% if block.settings.text-5 != blank %}
             <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-5}}</li>
            {% endif %}   
            {% if block.settings.text-6 != blank %}
             <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-6}}</li>
            {% endif %} 
             {% if block.settings.text-7 != blank %}
             <li style="background-color:{{block.settings.column-color}};color:{{block.settings.column-txt-color}};font-size:{{block.settings.column-txt-sz}}px">{{block.settings.text-7}}</li>
            {% endif %}
         </ul>
      </li>
      {% endfor %}
   </ul>
</div>
