{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      .testimonial-slider-section {
        padding-top: 75px;
        padding-bottom: 75px;
      }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
    @media screen and (min-width: 750px) {
      #testimonial-slider {
        padding-top: 100px;
        padding-bottom: 100px;
      }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<div class="testimonial-slider-section {% if section.settings.layout == 'grid' %} page-width{% endif %}">
  <h3 class="image-with-text__heading inline-richtext h1">
      Donâ€™t just take our word
  </h3>
  <div class="testimonial-slider" id="testimonial-slider">
    {%- for block in section.blocks -%}
      <div class="slideshow__slide slider__slide">
        <div class="slideshow__text-wrapper banner__content banner__content--{{ block.settings.box_align }}{% if block.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if settings.animations_reveal_on_scroll and forloop.index == 1 %} scroll-trigger animate--slide-in{% endif %}">
          <div class="slideshow__text color-{{ block.settings.color_scheme }} gradient slideshow__text--{{ block.settings.text_alignment }}">
            <img src="https://cdn.shopify.com/s/files/1/0672/2296/2428/files/TheBetter_TestimonialStars.svg" width="180px" height="100%">
            {%- if block.settings.heading != blank -%}
              <h2 class="banner__heading inline-richtext {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}
            <div class="banner__text rte" {{ block.shopify_attributes }}>
              {%- if block.settings.testimonial != blank -%}
                <p>{{ block.settings.testimonial }}</p>
              {%- endif -%}
              {%- if block.settings.person != blank -%}
                <p>{{ block.settings.person }}</p>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% javascript %}
  $(document).ready(function(){
    $('#testimonial-slider').slick({
      infinite: true,
      slidesToShow: 1, // Adjust the number of slides to show
      slidesToScroll: 1,
      dots: true, // Enable pagination dots
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1
          }
        }
      ]
      // Add any additional options or styling here
    });
  });
{% endjavascript %}

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

