{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #testimonial-slider {
        padding-top: 75px;
        padding-bottom: 75px;
      }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
    @media screen and (min-width: 750px) {
      #testimonial-slider {
        padding-top: 100px;
        padding-bottom: 100px;
      }
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<div class="testimonial-slider" id="testimonial-slider">
  {%- for block in section.blocks -%}
    <div>
      <!-- Customize the content based on your schema -->
      <img src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.alt_text }}">
      <h2>{{ block.settings.heading }}</h2>
      <p>{{ block.settings.testimonial }}</p>
      <!-- Add more content fields as needed -->
    </div>
  {%- endfor -%}
</div>

{% javascript %}
  $(document).ready(function(){
    $('#testimonial-slider').slick({
      infinite: true,
      slidesToShow: 1, // Adjust the number of slides to show
      slidesToScroll: 1,
      dots: true, // Enable pagination dots
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1
          }
        }
      ]
      // Add any additional options or styling here
    });
  });
{% endjavascript %}

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}


