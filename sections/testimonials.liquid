{%- style -%}
    .testimonial-slider {
      height: inherit;
    }
    .testimonial-slider__slide {
      border: 4px solid black;
      min-height: 450px;
    }
    .testimonial-slider__slide-wrapper {
      padding: 3rem;
      display: flex;
      flex-direction: column;
    }
    @media screen and (max-width: 749px) {
      .testimonial-slider-section {
        padding-top: 75px;
        padding-bottom: 75px;
      }
    }
    @media screen and (min-width: 750px) {
      .testimonial-slider-section {
        padding-top: 100px;
        padding-bottom: 100px;
      }   
    }
{%- endstyle -%}

<div class="testimonial-slider-section">
  <h3 class="image-with-text__heading inline-richtext h1" style="text-align: center;">
      Donâ€™t just take our word
  </h3>
  <div class="testimonial-slider slideshow banner" id="testimonial-slider">
    {%- for block in section.blocks -%}
      <div class="testimonial-slider__slide">
        <div class="testimonial-slider__slide-wrapper color-{{ block.settings.color_scheme }}{% if settings.animations_reveal_on_scroll and forloop.index == 1 %} scroll-trigger animate--slide-in{% endif %}">

            <img src="https://cdn.shopify.com/s/files/1/0672/2296/2428/files/TheBetter_TestimonialStars.svg" width="180px" height="100%">
            {%- if block.settings.heading != blank -%}
              <h2 class="banner__heading inline-richtext {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
              </h2>
            {%- endif -%}
            <div class="banner__text rte" {{ block.shopify_attributes }}>
              {%- if block.settings.testimonial != blank -%}
                <p>{{ block.settings.testimonial }}</p>
              {%- endif -%}
              {%- if block.settings.person != blank -%}
                <p>{{ block.settings.person }}</p>
              {%- endif -%}
            </div>

        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{{ 'jquery.min.js' | asset_url | script_tag }}
{{ 'slick.min.js' | asset_url | script_tag }}

{% javascript %}
  $(document).ready(function(){
    $('#testimonial-slider').slick({
      infinite: true,
      slidesToShow: 2,
      slidesToScroll: 1,
      dots: true,
      centerMode: true,
      centerPadding: '50px', // Adjust the centerPadding value as needed
      initialSlide: 1,  // Set half of slidesToShow for the initial centered slide
      swipeToSlide: true, // Allow dragging the slider
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1
          }
        }
      ]
    });
  });
{% endjavascript %}

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

